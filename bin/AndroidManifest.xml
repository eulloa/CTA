<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ezctatracker.ezctatracker"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.ezctatracker.ezctatracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.RouteDirections"
            android:label="@string/title_activity_route_directions" >
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.RouteStops"
            android:label="@string/title_activity_route_stops" >
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.RoutePredictions"
            android:label="@string/title_activity_route_predictions" >
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.TrainDirections"
            android:label="@string/title_activity_train_directions" >
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.TrainStops"
            android:label="@string/title_activity_train_stops" >
        </activity>
        <activity
            android:name="com.ezctatracker.ezctatracker.TrainPredictions"
            android:label="@string/title_activity_train_predictions" >
        </activity>
    </application>

</manifest>

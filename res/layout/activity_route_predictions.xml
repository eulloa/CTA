<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoutePredictions"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" >
        
        <TextView
            android:id="@+id/predictionRouteInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="Route Info"
	        android:textStyle="bold"
        	android:layout_centerHorizontal="true" />
        
        <TextView
            android:id="@+id/predictionStopName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="Stop Name"
	        android:textStyle="bold" 
	        android:layout_below="@+id/predictionRouteInfo"
	        android:layout_centerHorizontal="true" />
        
        <TextView
            android:id="@+id/predictionCurrentDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="Date"
	        android:textStyle="bold" 
	        android:layout_below="@+id/predictionStopName"
	        android:layout_centerHorizontal="true" />
        
        
        <ImageButton 
            android:id="@+id/predictionBusFav"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/unfav"
            android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="10dip"
	        android:background="@null"
	        android:tag="unfav" />
        
    </RelativeLayout>   

    <ListView
        android:id="@+id/predictionsListView"
        style="@style/ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
